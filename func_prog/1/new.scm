(define (iter n)
  (if (or (<= n 0) (not (integer? n)))
    '()
    (let forward
      (
        (this 1)
        (maxThis (- (* 2 n) 1))
        (lst '())
        (mul 1)
      )
      (if (= maxThis this)
        (cons (* this mul) lst)
        (if (= 0 (modulo this 2))
          (forward (+ 1 this) maxThis lst (* mul this))
          (forward (+ 1 this) maxThis (cons (* this mul) lst) (* mul this))
        )
      )
    )
  )
)

