(define (lin n)
  (define (fact-lst nThis nMax mul)
    (if (= nThis nMax)
      (cons (* mul nThis) '())
      (if (= 0 (modulo nThis 2))
        (fact-lst (+ 1 nThis) nMax (* mul nThis))
        (cons (* mul nThis) (fact-lst (+ 1 nThis) nMax (* mul nThis)))
      )
    )
  )
  (if (or (<= n 0) (not (integer? n)))
    '()
    (fact-lst 1 (- (* 2 n) 1) 1)
  )
)
